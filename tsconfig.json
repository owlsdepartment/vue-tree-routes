{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "lib": ["ES2017", "ES7", "ES6", "DOM", "ES2020"],
        "outDir": "./dist/src",
        "declaration": true,
        "declarationDir": "./dist/types",
        "target": "ES5",
        "strict": true,
        "downlevelIteration": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ],
    "exclude": ["node_modules", "dist"]
}